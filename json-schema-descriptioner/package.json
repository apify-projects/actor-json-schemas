{
    "name": "markdown-to-json-schema-generator",
    "version": "0.0.1",
    "type": "module",
    "description": "A simple and zero-opinion typescript starter template for building cross-platform command line applications.",
    "engines": {
        "node": ">=20.0.0"
    },
    "main": "./dist/index.js",
    "bin": "./dist/cli.js",
    "files": [
        "dist/**/*",
        "!dist/**/*.test.js"
    ],
    "dependencies": {
        "@apify/eslint-config-ts": "^0.3.0",
        "@hyperjump/json-schema-bundle": "^0.4.0",
        "cheerio": "=1.0.0-rc.10",
        "commander": "^13.1.0",
        "showdown": "^2.1.0"
    },
    "devDependencies": {
        "@apify/eslint-config-ts": "^0.3.0",
        "@apify/tsconfig": "^0.1.0",
        "@types/showdown": "^2.0.6",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "eslint": "^8.50.0",
        "tsx": "^4.6.2",
        "typescript": "^5.3.3",
        "vitest": "^3.1.1"
    },
    "scripts": {
        "start": "npm run start:dev",
        "start:dev": "tsx src/cli.ts",
        "build": "tsc",
        "lint": "eslint ./src --ext .ts",
        "lint:fix": "eslint ./src --ext .ts --fix",
        "test": "vitest",
        "describe-actor-schema": "npm run start:dev -- -i ../json-schemas/actor.schema.json -d ../json-schemas-description/actor.schema.md -o ../output/actor.schema.json",
        "describe-dataset-schema": "npm run start:dev -- -i ../json-schemas/dataset.schema.json -d ../json-schemas-description/dataset.schema.md -o ../output/dataset.schema.json",
        "describe-input-schema": "npm run start:dev -- -i ../json-schemas/input.schema.json -d ../json-schemas-description/input.schema.md -o ../output/input.schema.json",
        "describe-key-value-store-schema": "npm run start:dev -- -i ../json-schemas/key_value_store.schema.json -d ../json-schemas-description/key_value_store.schema.md -o ../output/key_value_store.schema.json",
        "describe-output-schema": "npm run start:dev -- -i ../json-schemas/output.schema.json -d ../json-schemas-description/output.schema.md -o ../output/output.schema.json"
    }
}
